<table class='table table-striped' id="library-prep-table">
  <thead>
  <tr>
    <th>Library</th>
    <th>Barcode</th>
    <th>Sample</th>
    <th>library_date</th>
    <th>library_prep_method</th>
    <th>input_ng</th>
    <th>notes</th>
  </tr>
  </thead>

  <tbody>

  {{#each}}
    {{#link-to 'read_group' this (query-params form="library-prep-table") tagName="tr"}}
      <td>{{library}}</td>
      <td>{{barcode}}</td>
      <td>{{sample}}</td>
      <td>{{format-date library_date}}</td>
      <td>{{library_prep_method}}</td>
      <td>{{input_ng}}</td>
      <td>{{notes}}</td>
    {{/link-to}}
  {{/each}}
  </tbody>
</table>