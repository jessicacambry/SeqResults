<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-6">
      <h3>
        <span class="label label-default">Runs</span>
        <span type="button" class="btn btn-primary">New Run</span>
      </h3>

      <table class='table table-striped'>
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Date</th>
            <th>Instrument</th>
            <th>Instrument Type</th>
          </tr>
        </thead>

        <tbody>
          {{#each}}
            {{#link-to 'run' this tagName="tr"}}
              <td>{{id}}</td>
              <td>{{name}}</td>
              <td>{{format-date date}}</td>
              <td>{{instrument}}</td>
              <td>{{instrument_type}}</td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      {{outlet}}
    </div>
  </div>
</div>