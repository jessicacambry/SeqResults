<ol class="breadcrumb">
  <li>{{#link-to 'projects'}}Project: {{project_id}} {{/link-to}}</li>
  <li>{{#link-to 'runs' project_id}}Runs{{/link-to}}</li>
</ol>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-6">
      <h3>
        <span class="label label-default">Runs</span>
      </h3>

      <table class='table table-striped'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Instrument</th>
            <th>Instrument Type</th>
            <th>Read Groups</th>
          </tr>
        </thead>

        <tbody>
          {{#each}}
            {{#link-to 'run' this tagName="tr"}}
              <td>{{name}}</td>
              <td>{{instrument}}</td>
              <td>{{instrument_type}}</td>
              <td>
                {{#link-to 'read_groups' this.id bubbles=false class='btn btn-default'}}
                  {{pluralize read_groups_count}}
                {{/link-to}}
              </td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      {{outlet}}
    </div>
  </div>
</div>